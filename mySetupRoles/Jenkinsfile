pipeline {
    agent { 
        node {
            label 'docker-agent-ansible'
            }
      }
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Ansible | Provision') {
            steps {
                echo "Provision..."
                sh '''
                pwd
                cd mySetupRoles
                pwd
                which ansible-playbook
                ansible-playbook run-provisions.yml
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                #cd myapp
                #python3 hello.py
                #python3 hello.py --name=Brad
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}